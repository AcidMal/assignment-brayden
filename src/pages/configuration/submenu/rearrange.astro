---
import Layout from '../../../layouts/Layout.astro';
import { MoreVertical } from 'lucide-react';
---

<Layout title="Portfol.io | Rearrange Items">
  <!-- Page-specific header -->
  <header class="rounded-lg bg-gray-200 dark:bg-zinc-800 text-gray-900 dark:text-gray-100 p-4 shadow-md mb-3">
    <nav class="container mx-auto flex items-center">
      <div class="flex items-center space-x-2">
      </div>
      <div class="flex items-center space-x-4">
        <a href="/configuration/aboutme" class="p-2 rounded-full dark:bg-zinc-800 hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors duration-200" aria-label="Home">About Me</a>
        <a href="/configuration/mywork" class="p-2 rounded-full dark:bg-zinc-700 hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors duration-200" aria-label="My Portfolio">My Work</a>
        <a href="/configuration/resume" class="p-2 rounded-full dark:bg-zinc-800 hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors duration-200" aria-label="Settings">Resume</a>
        <a href="" class="p-2 rounded-full dark:bg-zinc-800 hover:bg-zinc-900 dark:hover:bg-gray-600 transition-colors duration-200" aria-label="Help">Add Tab</a>
      </div>
    </nav>
  </header>

  <!-- Page content -->
  <div class="container mx-auto">
    <h2 class="text-2xl font-bold mb-4">Rearrange Items</h2>
    <div class="space-y-4">
      <!-- Repeat this block for each item -->
      {Array.from({ length: 5 }).map((_, index) => (
        <div class="flex items-center p-4 bg-white dark:bg-zinc-800 rounded-lg shadow-md">
          <div class="cursor-move mr-4">
            <MoreVertical className="w-6 h-6 text-gray-500 dark:text-gray-300" />
          </div>
          <input type="checkbox" class="mr-4" />
          <input type="text" placeholder={`Title ${index + 1}`} class="flex-1 p-2 bg-gray-100 dark:bg-zinc-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-gray-900 dark:text-gray-100 mr-4" />
          <input type="text" placeholder="Description" class="flex-1 p-2 bg-gray-100 dark:bg-zinc-700 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 text-gray-900 dark:text-gray-100" />
        </div>
      ))}
    </div>
  </div>
</Layout>

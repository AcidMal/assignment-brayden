---
import Layout from '../../../layouts/Layout.astro';
---

<Layout title="Portfol.io | Upload Resume">
  <!-- Page-specific header -->
  <header class="rounded-lg bg-gray-200 dark:bg-zinc-800 text-gray-900 dark:text-gray-100 p-4 shadow-md mb-3">
    <nav class="container mx-auto flex items-center">
      <div class="flex items-center space-x-2">
      </div>
      <div class="flex items-center space-x-4">
        <a href="/configuration/aboutme" class="p-2 rounded-full dark:bg-zinc-800 hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors duration-200" aria-label="Home">About Me</a>
        <a href="/configuration/mywork" class="p-2 rounded-full dark:bg-zinc-800 hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors duration-200" aria-label="My Portfolio">My Work</a>
        <a href="/configuration/resume" class="p-2 rounded-full dark:bg-zinc-700 hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors duration-200" aria-label="Settings">Resume</a>
        <a href="" class="p-2 rounded-full dark:bg-zinc-800 hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors duration-200" aria-label="Help">Add Tab</a>
      </div>
    </nav>
  </header>

  <div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-6">Upload Document</h1>

    <div class="flex gap-8">
      <!-- Left side with upload button -->
      <div class="flex flex-col items-center">
        <button class="w-12 h-12 bg-zinc-700 hover:bg-zinc-600 rounded-lg flex items-center justify-center transition-colors duration-200">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white">
            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"/>
            <polyline points="17 8 12 3 7 8"/>
            <line x1="12" y1="3" x2="12" y2="15"/>
          </svg>
        </button>
        <span class="mt-2 text-sm text-gray-400">Auto Fill</span>
      </div>

      <!-- Right side with textareas -->
      <div class="flex-1 space-y-4">
        <div>
          <label class="block text-sm font-medium mb-2">Contact:</label>
          <textarea 
            class="w-full h-24 p-3 bg-zinc-800 bg-opacity-75 border-2 border-zinc-700 rounded-lg focus:outline-none focus:ring-1 focus:ring-zinc-100 text-white"
            placeholder="Enter contact information..."
          ></textarea>
        </div>

        <div>
          <label class="block text-sm font-medium mb-2">Work Experience:</label>
          <textarea 
            class="w-full h-32 p-3 bg-zinc-800 bg-opacity-75 border-2 border-zinc-700 rounded-lg focus:outline-none focus:ring-1 focus:ring-zinc-100 text-white"
            placeholder="Enter work experience..."
          ></textarea>
        </div>

        <div>
          <label class="block text-sm font-medium mb-2">Education:</label>
          <textarea 
            class="w-full h-32 p-3 bg-zinc-800 bg-opacity-75 border-2 border-zinc-700 rounded-lg focus:outline-none focus:ring-1 focus:ring-zinc-100 text-white"
            placeholder="Enter education history..."
          ></textarea>
        </div>
      </div>
    </div>

    <div class="mt-6 flex justify-between">
      <button class="bg-zinc-700 hover:bg-zinc-600 text-white px-4 py-2 rounded-lg transition-colors duration-200">
        Add Section
      </button>
      <a 
        href="/configuration/resume"
        class="bg-zinc-700 hover:bg-zinc-600 text-white px-4 py-2 rounded-lg transition-colors duration-200"
      >
        Save & Close
      </a>
    </div>
  </div>



</Layout>
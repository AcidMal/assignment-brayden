---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Portfol.io | Config | About Me">
  <!-- Page-specific header -->
  <header class="rounded-lg bg-gray-200 dark:bg-zinc-800 text-gray-900 dark:text-gray-100 p-4 shadow-md mb-3">
    <nav class="container mx-auto flex items-center">
      <div class="flex items-center space-x-2">
      </div>
      <div class="flex items-center space-x-4">
        <a href="/configuration/aboutme" class="p-2 rounded-full dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors duration-200" aria-label="Home">About Me</a>
        <a href="/configuration/mywork" class="p-2 rounded-full dark:bg-zinc-800 hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors duration-200" aria-label="My Portfolio">My Work</a>
        <a href="/configuration/resume" class="p-2 rounded-full dark:bg-zinc-800 hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors duration-200" aria-label="Settings">Resume</a>
        <a href="" class="p-2 rounded-full dark:bg-zinc-800 hover:bg-zinc-900 dark:hover:bg-gray-600 transition-colors duration-200" aria-label="Help">Add Tab</a>
      </div>
    </nav>
  </header>

  <!-- Page content goes here -->
  <div class="container mx-auto">
    <!-- Add your page-specific content here -->
  </div>

  <div class="grid grid-cols-2 gap-4">
    <div class="flex flex-col items-center justify-center py-8">
      <section class="border-">
        <img src="https://cdn.acidmal.com/106fc178bf3964309850c7ad41939844-2360266163.jpg" alt="Profile Picture" class="w-40 h-40 rounded-full object-cover shadow-lg">
      </section>
      <button class="mt-4 bg-zinc-100 text-zinc-900 p-2 rounded-lg hover:bg-zinc-400 transition-colors duration-300">
        Edit Image
      </button>
    </div>
    
    <div class="h-auto flex flex-col items-center justify-center p-4 bg-zinc-400 bg-opacity-75 rounded-lg shadow-md border-2 border-blue-100">
        <h3 class="text-xl font-bold mb-2">Biography</h3>
        <textarea class="w-full h-32 p-2 bg-zinc-400 bg-opacity-75 border-2 border-zinc-100 rounded-lg focus:outline-none focus:ring-1 focus:ring-zinc-100 text-white placeholder:text-zinc-200" placeholder="Write your biography here..."></textarea>
      </div>

    <div class="flex items-center justify-center p-4 rounded-lg shadow-md">
      <button class="bg-zinc-100 hover:bg-zinc-400 ease-in-out transition-colors duraiont-300 p-2 rounded-lg">
        <a
            href=""
            class="text-zinc-900"
        >Change Theme</a>
      </button>
    </div>
    

  </div>

</Layout>
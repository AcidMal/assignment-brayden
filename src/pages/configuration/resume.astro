---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Portfol.io | Config | About Me">
  <!-- Page-specific header -->
  <header class="rounded-lg bg-gray-200 dark:bg-zinc-800 text-gray-900 dark:text-gray-100 p-4 shadow-md mb-3">
    <nav class="container mx-auto flex items-center">
      <div class="flex items-center space-x-2">
      </div>
      <div class="flex items-center space-x-4">
        <a href="/configuration/aboutme" class="p-2 rounded-full dark:bg-zinc-800 hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors duration-200" aria-label="Home">About Me</a>
        <a href="/configuration/mywork" class="p-2 rounded-full dark:bg-zinc-800 hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors duration-200" aria-label="My Portfolio">My Work</a>
        <a href="/configuration/resume" class="p-2 rounded-full dark:bg-zinc-700 hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors duration-200" aria-label="Settings">Resume</a>
        <a href="" class="p-2 rounded-full dark:bg-zinc-800 hover:bg-gray-300 dark:hover:bg-gray-600 transition-colors duration-200" aria-label="Help">Add Tab</a>
      </div>
    </nav>
  </header>

  <div>
    <div class="container mx-auto p-4">
      <!-- Header and Contact Section -->
      <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold">Resume</h1>
        <div class="flex items-center space-x-2">
          <label for="contact" class="font-medium">Contact:</label>
          <input 
            type="text" 
            id="contact" 
            class="p-2 bg-zinc-800 bg-opacity-75 border-2 border-zinc-700 rounded-lg focus:outline-none focus:ring-1 focus:ring-zinc-100 text-white"
            placeholder="Enter contact details..."
          />
        </div>
      </div>

      <!-- Upload Button -->
      <div class="mb-6">
        <a href="/configuration/submenu/resume-upload" class="inline-block px-4 py-2 bg-zinc-100 text-zinc-900 rounded-lg hover:bg-zinc-400 transition-colors duration-200">
          Edit/Upload Resume
        </a>
      </div>

      <!-- Work Experience Section -->
      <div class="mb-6">
        <h2 class="text-xl font-medium mb-2">Work Experience</h2>
        <textarea 
          class="w-full h-48 p-4 bg-zinc-800 bg-opacity-75 border-2 border-zinc-700 rounded-lg focus:outline-none focus:ring-1 focus:ring-zinc-100 text-white"
          placeholder="Enter your work experience..."
        ></textarea>
      </div>

      <!-- Education Section -->
      <div class="mb-6">
        <h2 class="text-xl font-medium mb-2">Education</h2>
        <textarea 
          class="w-full h-48 p-4 bg-zinc-800 bg-opacity-75 border-2 border-zinc-700 rounded-lg focus:outline-none focus:ring-1 focus:ring-zinc-100 text-white"
          placeholder="Enter your education history..."
        ></textarea>
      </div>
    </div>
  </div>

</Layout>

---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Portfol.io | Create Account">
  <div class="max-w-4xl mt-6 mx-auto">
    <div class="grid gap-8">
      <section class="text-center">
        <h2 class="text-2xl font-bold mb-4">Create your Portfol.io</h2>
        <form action="/portal/portfolio" method="get" class="space-y-4">
          <div class="text-left">
            <label for="email" class="block text-lg text-gray-600 dark:text-gray-300 mb-2">Email</label>
            <input type="email" id="email" name="email" placeholder="janedoe@example.com" class="w-full p-2 text-zinc-900 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 opacity-50" required>
          </div>
          <div class="text-left">
            <label for="password" class="block text-lg text-gray-600 dark:text-gray-300 mb-2">Password</label>
            <input type="password" id="password" name="password" placeholder="Enter Password" class="w-full p-2 text-zinc-900 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 opacity-50" required>
          </div>
          <div class="text-left">
            <label for="confirm-password" class="block text-lg text-gray-600 dark:text-gray-300 mb-2">Confirm Password</label>
            <input type="password" id="confirm-password" name="confirm-password" placeholder="Confirm Password" class="w-full p-2 text-zinc-900 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 opacity-50" required>
          </div>
        </form>
        <button class="mt-6 w-full p-3 rounded-lg text-zinc-900 bg-zinc-100 hover:bg-zinc-400 transition-colors duration-300">  
            <a
            href="/portal/portfolio" 
            class="w-full text-center justify-center text-lg">
            Submit
            </a>
        </button>
    </div>
  </div>
</Layout>